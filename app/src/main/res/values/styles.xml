<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/animation_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/animation_leave</item>
        <item name="android:activityCloseEnterAnimation">@anim/animation_leave</item>
        <item name="android:activityCloseExitAnimation">@anim/animation_enter</item>
    </style>
</resources>
